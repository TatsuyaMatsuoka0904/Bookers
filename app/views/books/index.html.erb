<html>
  <body>
<% if flash[:notice] %>
	<p id="notice"><b><%= flash[:notice] %></b></p>
<% end %>
<h1>Books</h1>

<table>
  <thead>
    <tr class="table_title">
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr class="table_body">
        <td class="b-title"><%= book.title %></td>
        <td class="b-body"><%= book.body %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to "Destroy", "/books/#{book.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2>New book</h2>
	<%= form_for(@book) do |f| %>
  <%= render 'error_form', book: @book %>
<% end %>
</body>